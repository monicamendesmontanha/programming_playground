<h2>Edit Butterfly</h2>

<form action="/butterflies/<%= @butterflies["id"] %>" method="post">
  <label>
    Name:
    <input type="text" name="name" value="<%= @butterflies["name"] %>" placeholder="Butterfly name" required autofocus>
  </label>
  <label>
    Family:
    <input type="text" name="family" value="<%= @butterflies["family"] %>" placeholder="Butterfly family name">
  </label>
  <label>
    Image:
    <input type="url" name="image" value="<%= @butterflies["image"] %>" placeholder="http://...">
  </label>
  <button>Update butterfly!</button>
</form>
